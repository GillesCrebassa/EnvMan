{% extends "layout.html.twig" %}

{% block title %}Edit a parameter of a product{% endblock %}
{% block body %}
 <div class="container">
{{ form_start(form) }}
{{ form_errors(form) }}
    {{ form_row(form.name) }}
    {{ form_row(form.description) }}
    {{ form_row(form.product) }}         
    {{ form_row(form.hardcoded) }}
    {{ form_row(form.save, { 'label': 'Update' }) }}
{{ form_end(form) }}
</div>
{%  endblock body %}
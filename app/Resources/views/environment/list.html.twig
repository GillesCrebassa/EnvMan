{% extends "layout.html.twig" %}

{% block title %}Environments Summary{% endblock %}

{% block body %}
<div class="container">
    <br>
    <br>
    <div class="row">
        <div class="col-xs-8 col-md-8 col-lg-8 centered">
            <h1>Environments List</h1>
        </div>
    </div>
    <div class="row">
        <div class="col-xs-6 col-md-6 col-lg-6 left">
            <button type="button" class="btn btn-default"/><span class="glyphicon glyphicon-plus-sign glyphicon-align-left"></span><a href="/environment/add"> Add</a></button>
        </div>
        <div class="col-xs-2 col-sm-2 col-md-2 pull-right">
        <form class="navbar-form" role="search">
        <div class="input-group">
            <input type="text" class="form-control" placeholder="Search" name="search-term" id="srch-term">
            <div class="input-group-btn">
                <button class="btn btn-default" type="submit"><i class="glyphicon glyphicon-search"></i></button>
            </div>
        </div>
        </form>
        </div>            
    </div>
    <div class="row spacer">
        <br>        
    </div>
    <div class="row">
        <div class="col-xs-8 col-md-8 col-lg-8 centered">
            <table class="table table-bordered">
{#
              <caption>
                <strong>Environments List</strong></em>
              </caption>
#}
             <thead>
                <tr>
                  <th>Name</th>
                  <th>Description</th>
                  <th>Responsible</th>
                  <th>Action</th>
                </tr>
              </thead>
              <tbody>             
        {% for environment in environments if environment %}
                     <tr>
                         <td><a href="/envdetails/{{ environment.id }}">{{ environment.name }}</a></td>
                         <td>{{ environment.description }}</td>
                         <td>{{ environment.responsible }}</td>
                         <!--
                         <td>
                             <button type="button" class="btn btn-default"/><span class="glyphicon glyphicon-info-sign glyphicon-align-left"></span><a href="/environment/view/{{ environment.id }}"> View</a></button>
                             <button type="button" class="btn btn-default"/><span class="glyphicon glyphicon-edit glyphicon-align-left"></span><a href="/environment/edit/{{ environment.id }}"> Edit</a></button>
                             <button type="button" class="btn btn-default"/><span class="glyphicon glyphicon-remove-sign glyphicon-align-left"></span><a href="/environment/delete/{{ environment.id }}"> Delete</a></button>
                             <button type="button" class="btn btn-default"/><span class="glyphicon glyphicon-search glyphicon-align-left"></span><a href="/envdetails/{{ environment.id }}"> Details</a></button>
                             <button type="button" class="btn btn-default"/><span class="glyphicon glyphicon-cloud-upload glyphicon-align-left"></span><a href="/audit/{{ environment.id }}"> Audit</a></button>
                         </td>
                         -->
                         <td>
                             <div class = "btn-group">
                                 <button type="button" class = "btn btn-default dropdown-toggle btn-sm" data-toggle = "dropdown">
                                     <span class="glyphicon glyphicon-info-sign glyphicon-align-left"></span><a href="/environment/view/{{ environment.id }}"> View</a>
                                 </button>
                                 <button type="button" class="btn btn-default dropdown-toggle btn-sm" data-toggle="dropdown">
                                     <span class="glyphicon glyphicon-chevron-down"></span>
                                 </button>
                                 <ul class="dropdown-menu" role="menu">
                                    <li><div class="col-xs-8 col-md-8 col-lg-8 centered"><span class="glyphicon glyphicon-edit glyphicon-align-left"></span><a href="/environment/edit/{{ environment.id }}"> Edit</a></div></li>
                                    <li><div class="col-xs-8 col-md-8 col-lg-8 centered"><span class="glyphicon glyphicon-remove-sign glyphicon-align-left"></span><a href="/environment/delete/{{ environment.id }}"> Delete</a></div></li>
                                    <li><div class="col-xs-8 col-md-8 col-lg-8 centered"><span class="glyphicon glyphicon-search glyphicon-align-left"></span><a href="/envdetails/{{ environment.id }}"> Details</a></div></li>
                                    <li><div class="col-xs-8 col-md-8 col-lg-8 centered"><span class="glyphicon glyphicon-cloud-upload glyphicon-align-left"></span><a href="/audit/{{ environment.id }}"> Audit</a></div></li>
                                </ul>
                             </div>
                         </td>
                         
                     </tr>
        {% endfor %}      
              </tbody>
       </table>
    </div><!-- end col-lg-8 -->
    <div class="col-xs-8 col-md-8 col-lg-8 centered">    
    {% include 'pagination.html.twig' %}
   </div>
  </div><!-- end row -->
</div><!-- end container -->
{%  endblock body %}

